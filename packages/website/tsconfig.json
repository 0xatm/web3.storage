{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "web3.storage": ["../client"]
    }
  },
  "include": ["lib", "pages", "components", "content", "hooks", "modules"],
  "exclude": ["node_modules/", ".next/"],
  "references": [
    {
      "path": "../client"
    }
  ]
}
