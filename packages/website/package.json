{
  "name": "@web3-storage/website",
  "version": "1.5.0",
  "description": "web3.storage website",
  "private": true,
  "scripts": {
    "start": "next dev -p 4000",
    "build": "next build && next-sitemap && next export",
    "test": "eslint './**/*.js' && tsc --build",
    "storybook": "start-storybook -p 6000",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@magic-ext/oauth": "^0.7.0",
    "clsx": "^1.1.1",
    "countly-sdk-web": "^20.11.2",
    "css-loader": "^6.5.1",
    "filesize": "^6.1.0",
    "gray-matter": "^4.0.3",
    "magic-sdk": "^4.2.1",
    "next": "^11.0.1",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-if": "^4.0.1",
    "react-markdown": "^6.0.2",
    "react-query": "^3.13.9",
    "react-redux": "^7.2.6",
    "react-syntax-highlighter": "^11.0.3",
    "remark-slug": "^6.1.0",
    "sass": "^1.43.4",
    "web3.storage": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@svgr/webpack": "^5.5.0",
    "@types/react": "^17.0.30",
    "@types/react-copy-to-clipboard": "^5.0.1",
    "@types/react-dom": "^17.0.9",
    "@types/react-syntax-highlighter": "^13.5.2",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.3",
    "eslint": "^7.24.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "next-sitemap": "^1.6.173",
    "typescript": "^4.3.5",
    "url-loader": "^4.1.1"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "react/prop-types": "off",
      "no-unused-vars": [
        "error",
        {
          "args": "all",
          "argsIgnorePattern": "_",
          "varsIgnorePattern": "_"
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/display-name": 1
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".next",
    "out"
  ]
}
